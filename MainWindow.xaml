<Window x:Class="MyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="WTS">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="451*"/>
        </Grid.ColumnDefinitions>
        <Button Content="WTS - Development" HorizontalAlignment="Left" Margin="95,79,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click" Grid.Column="2"/>
        <Button Content="WTS - Support" HorizontalAlignment="Left" Margin="94,126,0,0" VerticalAlignment="Top" Width="198" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1" Grid.Column="2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1.057"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="TD Wealth Management" HorizontalAlignment="Left" Margin="123,25,0,0"  VerticalAlignment="Top" Width="147" Grid.Column="2"/>
        <Button Content="ITS" Grid.Column="2" HorizontalAlignment="Left" Margin="95,183,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click_2"/>

    </Grid>
</Window>
